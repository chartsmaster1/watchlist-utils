{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "headers": [
      {
        "source": "/data/**",
        "headers": [
          { "key": "Access-Control-Allow-Origin",  "value": "*" },
          { "key": "Access-Control-Allow-Methods", "value": "GET,OPTIONS" }
        ]
      },
      {
        "source": "**/*.{js,css,png,jpg,jpeg,gif,svg,json,csv}",
        "headers": [
          { "key": "Access-Control-Allow-Origin",  "value": "*" },
          { "key": "Access-Control-Allow-Methods", "value": "GET,OPTIONS" }
        ]
      }
    ],
    "rewrites": [
      { "source": "/viewer", "destination": "/viewer.html" },
      { "source": "/table",  "destination": "/table.html" },
      { "source": "**",     "destination": "/index.html" }
    ]
  }
}
